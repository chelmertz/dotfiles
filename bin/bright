#!/bin/sh

set -eu

# add yourself to the group "video" to use without sudo
curr=$(brightnessctl get)
max=$(brightnessctl max)

min="$((max / 5))"
step="$((max / 4))"

echo min: $min

case $1 in
    up)
        brightnessctl set $((curr + step))
        ;;
    down)
        new=$((curr - step))
        brightnessctl set $((new < min ? min : new))
esac
