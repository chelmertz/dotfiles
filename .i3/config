# I want to use the F-keys for changing workspaces, but when playing (or using htop), those keys needs to be unbound
mode "fkey" {
	bindsym $mod+m mode "default"; exec notify-send "fkey mode off (mod + m)"
	bindsym $mod+1 exec --no-startup-id i3-project switch 1
	bindsym $mod+2 workspace number $ws2
	bindsym $mod+3 exec --no-startup-id i3-project switch 3
	bindsym $mod+4 exec --no-startup-id i3-project switch 4
	bindsym $mod+5 exec --no-startup-id i3-project switch 5
	bindsym $mod+6 exec --no-startup-id i3-project switch 6
	bindsym $mod+7 workspace number $ws7
	bindsym $mod+8 exec --no-startup-id i3-project switch 8
	bindsym $mod+9 workspace number $ws9
	bindsym $mod+0 workspace number $ws10
}

bindsym $mod+m mode "fkey"; exec notify-send "fkey mode on (mod + m)"

bindsym F1 exec --no-startup-id i3-project switch 1
bindsym F2 exec /home/ch/.local/bin/ror.py Firefox --workspace $ws2 firefox; workspace number $ws2
bindsym F3 exec --no-startup-id i3-project switch 3
bindsym F4 exec --no-startup-id i3-project switch 4
bindsym F5 exec --no-startup-id i3-project switch 5
bindsym F6 exec --no-startup-id i3-project switch 6
bindsym F7 exec /home/ch/.local/bin/ror.py steam /usr/bin/steam; workspace number $ws7
bindsym F8 exec --no-startup-id i3-project switch 8
bindsym F9 exec --no-startup-id /home/ch/.local/bin/ror.py Slack /usr/bin/slack; workspace number $ws9
bindsym F10 workspace number $ws10

